extends ../layouts/default

block vars
	-
		const page = {
			title: 'Близость | Искусство Трансформационного Общения'
		};

block main
	section.hero-block.section-1
		img.hero-block__bg(src="images/hero-bg.jpg" alt="" loading="lazy")
		.hero-block__container.container
			.hero-block__content
				h1.hero-block__title Близость
				h2.hero-block__subtitle Искусство Трансформационного Общения
				.hero-block__text 3-дневный марафон, который научит тебя выстраивать близость в отношениях <br><span>16,</span> <span>17</span> и <span>18</span> июня в <span>19:30</span>
				a.hero-block__btn.btn(href="#registration") Я хочу!


	section.problem.section-2
		.problem__container.container
			.problem__section.problem__section--1.sp1
				.sp1__left
					.sp1__left-block(data-aos="fade")
						img.sp1__left-img(src="images/shape-1.png" alt="" loading="lazy")
